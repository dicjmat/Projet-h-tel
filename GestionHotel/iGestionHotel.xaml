<Window x:Class="iGestionHotel" WindowState="Maximized" WindowStartupLocation="CenterScreen" Background="CadetBlue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="350" Width="525">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="172">
                <GroupBox BorderBrush="Black" Header="Gestion des Hôtels" HorizontalAlignment="Center" Margin="102,0,101.4,26" Width="155">
                    <StackPanel Margin="0,0,0.4,-3.2">
                        <Grid>
                            <Label Content="NoHotel :" Margin="0,0,0,0"></Label>
                            <TextBox Name="txtNoHotel" Margin="60,5,0.4,100.6" Height="20"></TextBox>
                            <Label Content="Nom :" Margin="0,25,0,0"></Label>
                            <TextBox Name="txtNomHotel" Margin="40,30,0.4,75.6" Height="20"></TextBox>
                            <Label Content="Adresse :" Margin="0,50,0,0"></Label>
                            <TextBox Name="txtAdrHotel" Margin="60,55,0.4,50.6" Height="20"></TextBox>
                            <Label Content="noTelephone :" Margin="0,75,0,0"></Label>
                            <TextBox Name="txtTelHotel" Margin="86,80,0.4,25.6" Height="20"></TextBox>
                            <Label Content="CodeVille :" Margin="0,100,0,0"></Label>
                            <ComboBox Name="cbCodeVille" Margin="73,105,0.4,0.6" Background="White" Height="20"></ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="86" Margin="0,0,-0.2,0"/>
                <Button Name="btnAjouter" Content="Ajouter" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,272.8,0" Width="86"></Button>
                <Button Name="btnModifier" Content="Modifier" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,181.8,0" Width="86"></Button>
                <Button Name="btnSupprimer" Content="Supprimer" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,90.8,0" Width="86"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

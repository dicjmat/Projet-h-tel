            <Grid Height="274" Width="506">
                <GroupBox BorderBrush="Black" Header="Gestion des Hôtels" HorizontalAlignment="Center" Margin="22,10,128,31" Width="356">
                    <StackPanel Margin="0,0,0.4,-3.2">

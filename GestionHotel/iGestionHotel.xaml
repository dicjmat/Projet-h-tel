                            <xctk:MaskedTextBox Mask="09" Name="txtNoHotel" Margin="73,4,0,113.6" Height="20" HorizontalAlignment="Left" Width="87"></xctk:MaskedTextBox>
                            <Label Content="Nom :" Margin="0,25,0,76.6" HorizontalAlignment="Left" Width="42"></Label>
                            <TextBox Name="txtNomHotel" Margin="40,29,0,88.6" Height="20" HorizontalAlignment="Left" Width="120"></TextBox>
                            <Label Content="Adresse :" Margin="0,50,0,57.6" HorizontalAlignment="Left" Width="62"></Label>

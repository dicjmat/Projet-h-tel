<Window x:Class="iInventaire" WindowStartupLocation="CenterScreen" WindowState="Maximized"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="566.397" Width="708.6">
    <Grid>
        <Viewbox Stretch="Uniform" Margin="0,0,0.4,0.4">
            <Grid Height="197" Width="190">
                <Label Content="Code Item : " Margin="-34,0,34,161" Height="36" VerticalAlignment="Bottom"></Label>
                <TextBox Name="txtCodeItem" Margin="41,5,33,0" Height="20" VerticalAlignment="Top"/>
                <GroupBox Header="Inventaire" Margin="-32,30,-32,45">
                    <StackPanel>
                        <Grid>
                            <DataGrid Name="lstInventaire" ItemsSource="{Binding}" Margin="0,0,-0.2,-100" Height="100">
                                <DataGrid.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label Content="{Binding nom}"/>
                                            <Label Content="{Binding prenom}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGrid.ItemTemplate>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Margin="0,0,-32,15" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="44"></Button>
                <Button Name="btnCommander" Content="Commander" Margin="0,0,17,15" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

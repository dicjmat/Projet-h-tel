<Window x:Class="iInventaire" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" Name="windowInventaire" WindowStyle="None"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="692.964" Width="1373" Loaded="Window_Loaded">
    <Grid>
        <Viewbox Stretch="Uniform" Margin="0,0,0.4,0.4">
            <Grid Height="239" Width="493">
                <Button Name="btnAjoutItem" Content="Ajouter Item" HorizontalAlignment="Center" Margin="258,212,135,0" VerticalAlignment="Top" Width="100" Height="25"/>
                <Label Content="Rechercher : " Margin="0,0,0,203" Height="36" VerticalAlignment="Bottom"></Label>
                <TextBox Name="txtCodeItem" Margin="75,0,298,0" Height="20" Width="120" VerticalAlignment="Top"/>
                <GroupBox BorderBrush="Black" Header="Inventaire" Margin="0,30,0,32">
                    <StackPanel>
                        <Grid>
                            <DataGrid Name="lstInventaire" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="0,0,0,-157">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Code" Binding="{Binding codeItem}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Nom" Binding="{Binding nomItem}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Description" Binding="{Binding descItem}"></DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Margin="0,0,9,2" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="44"></Button>
                <Button Name="btnCommander" Content="Commander" Margin="0,0,58,2" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

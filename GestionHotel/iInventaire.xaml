<Window x:Class="iInventaire" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="566.397" Width="1373" Loaded="Window_Loaded">
    <Grid>
        <Viewbox Stretch="Uniform" Margin="0,0,0.4,0.4">
            <Grid Height="197" Width="493">
                <Label Content="Code Item : " Margin="0,0,0,156" Height="36" VerticalAlignment="Bottom"></Label>
                <TextBox Name="txtCodeItem" Margin="75,5,311,0" Height="20" Width="120" VerticalAlignment="Top"/>
                <GroupBox BorderBrush="Black" Header="Inventaire" Margin="0,30,0,45">
                    <StackPanel>
                        <Grid>
                            <DataGrid Name="lstInventaire" ItemsSource="{Binding}" Margin="0,0,-0.2,-100" Height="100">
                                <DataGrid.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label Content="{Binding nom}"/>
                                            <Label Content="{Binding prenom}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGrid.ItemTemplate>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Margin="0,0,0,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="44"></Button>
                <Button Name="btnCommander" Content="Commander" Margin="0,0,49,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

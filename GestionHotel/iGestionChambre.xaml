<Window x:Class="iGestionChambre" WindowStartupLocation="CenterScreen" Background="CadetBlue" Name="windowGChambre" WindowStyle="None" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="155.695" Width="525">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="254" Height="75">
                <GroupBox BorderBrush="Black" Header="Gestion des chambres" Margin="0,0,86,0">
                    <StackPanel>
                        <Grid>
                            <Label Content="No de Chambre :" Margin="0,0,0.2,0" Height="52" VerticalAlignment="Top"></Label>
                            <TextBox Name="txtNoChambre" Margin="100,5,0.2,0" Height="20" VerticalAlignment="Top"></TextBox>
                            <Label Content="TypeChambre :" Margin="0,26,0.2,0" Height="26" VerticalAlignment="Top"></Label>
                            <ComboBox Background="White" Height="20" Margin="90,30,0.2,0" VerticalAlignment="Top"></ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" VerticalAlignment="Center" HorizontalAlignment="Right" Width="86" Margin="0,48,0,2" Height="25"/>
                <Button Name="btnAjouter" Content="Ajouter" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,40" Width="86" Height="25"></Button>
                <Button Name="btnModifier" Height="25" Content="Modifier" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,40" Width="86"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

<Window x:Class="iGestionChambre" WindowState="Maximized" WindowStartupLocation="CenterScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="350" Width="525">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="254">
                <GroupBox Header="Gestion des chambres" Margin="0,0,109,10.4">
                    <StackPanel>
                        <Grid>
                            <Label Content="NoChambre :" Margin="0,0,0,0"></Label>
                            <TextBox Name="txtNoChambre" Margin="80,5,0.4,100.6" Height="20"></TextBox>
                            <Label Content="NoHotel:" Margin="0,30,0.4,68.6"></Label>
                            <ComboBox Name="CbNoHotel" Margin="61,30,0.4,68.6" Height="20" Background="White"></ComboBox>
                            <Label Content="TypeChambre :" Margin="0,59,0.4,41.6"></Label>
                            <ComboBox Background="White" Height="20" Margin="90,63,0.4,43.4"></ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" VerticalAlignment="Center" HorizontalAlignment="Right" Width="86" Margin="0,128,10,10"/>
                <Button Name="btnAjouter" Content="Ajouter" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,46,10,91" Width="86"></Button>
                <Button Name="btnModifier" Content="Modifier" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,74,10,64" Width="86"></Button>
                <Button Name="btnSupprimer" Content="Supprimer" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,101,10,37" Width="86"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" VerticalAlignment="Center" HorizontalAlignment="Right" Width="86" Margin="0,131,0,11.4"/>
                <Button Name="btnAjouter" Content="Ajouter" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,50,0,93" Width="86"></Button>
                <Button Name="btnModifier" Content="Modifier" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,75,0,64.8" Width="86"></Button>
                <Button Name="btnSupprimer" Content="Supprimer" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,104,0,36.6" Width="86"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

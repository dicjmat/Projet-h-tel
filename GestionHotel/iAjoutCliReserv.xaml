<Window x:Class="iAjoutCliReserv" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" Background="CadetBlue" Name="window_AjoutCliReserv" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="iAjoutCliReserv" Height="539.219" Width="398.376">
    
    <Window.Resources>
        <Style x:Key="styleBouton" TargetType="Button">
            <Setter Property="Background" Value="WhiteSmoke"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="573" Width="418">
                <Rectangle HorizontalAlignment="Stretch" Fill="Black" Height="1" Margin="1,103,-1,468"></Rectangle>

                <Button Name="btnCheck" Style="{StaticResource styleBouton}" Content="Check-in/Check-out" Height="25" Width="125" Margin="19,10,274,538"></Button>
                <Button Name="btnFact" Style="{StaticResource styleBouton}" Content="Facture" Height="25" Width="125" Margin="19,40,274,508"></Button>
                <Button Name="btnReservC" Style="{StaticResource styleBouton}" Content="Réservation Chambre" Height="25" Width="125" Margin="19,71,274,477"/>
                <Button Name="btnFicheC" Style="{StaticResource styleBouton}" Content="Fiche client" Height="25" Width="125" Margin="149,10,144,538"></Button>
                <Button Name="btnFicheReserv" Style="{StaticResource styleBouton}" Content="Fiche Réservation" Height="25" Width="125" Margin="149,41,144,507"></Button>
                <Button Name="btnFicheReservF" Style="{StaticResource styleBouton}" Content="Fiche Réservation Fact" Height="25" Width="125" Margin="149,71,144,477"></Button>
                <Button Name="btnListeCli" Style="{StaticResource styleBouton}" Content="Liste de client" Height="25" Width="125" Margin="279,10,14,538"></Button>

                <GroupBox Header="Client" BorderBrush="Black" Margin="1,108,0,64">
                    <Grid>
                        <Label Content="Nom :" Margin="10,0,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="43"></Label>
                        <xctk:MaskedTextBox PromptChar=" " Mask="?????????????????????????????????????????????" Height="20" Name="txtNomCli" Margin="53,11,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="177"></xctk:MaskedTextBox>
                        <Label Content="Prénom :" Margin="10,30,0,0" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left" Width="59"></Label>
                        <xctk:MaskedTextBox PromptChar=" " Mask="?????????????????????????????????????????????" Height="20" Name="txtPrenCli" Margin="69,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="161"></xctk:MaskedTextBox>
                        <Label Content="NoTéléphone :" Margin="10,60,0,0" Height="37" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90"></Label>
                        <xctk:MaskedTextBox PromptChar=" " Mask="000-000-0000" Height="20" Name="txtTelCli" Margin="100,71,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130"></xctk:MaskedTextBox>
                        <Label Content="NoCéllulaire :" Margin="11,90,0,0" HorizontalAlignment="Left" Width="81" Height="36" VerticalAlignment="Top"></Label>
                        <xctk:MaskedTextBox PromptChar=" " Mask="000-000-0000" Height="20" Name="txtCelCli" Margin="100,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130"></xctk:MaskedTextBox>
                        <Label Content="Adresse :" Margin="10,120,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="59"></Label>
                        <xctk:MaskedTextBox PromptChar=" " Mask="09999 aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" Height="20" Name="txtAdrCli" Margin="69,131,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="228"></xctk:MaskedTextBox>
                        <Label Content="No Carte de crédit :" Margin="10,150,0,0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116"></Label>
                        <xctk:MaskedTextBox PromptChar=" " Mask="0000000000000009" Height="20" Name="txtNoCarteCredit" Margin="126,161,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104"></xctk:MaskedTextBox>
                        <Label Content="Type de carte :" Margin="10,180,0,0" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90"></Label>
                        <ComboBox Height="20" ItemsSource="{Binding}" Name="cbTypeCarte" Background="White" Margin="100,193,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Label Content="{Binding typeCarteCredit}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Label Content="Code d'expiration :" Margin="10,210,0,0" HorizontalAlignment="Left" Width="111" Height="25" VerticalAlignment="Top"></Label>
                        <xctk:MaskedTextBox PromptChar=" " Mask="00/00" Height="20" Name="txtCodeExp" Margin="126,221,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="52"></xctk:MaskedTextBox>
                        <Label Content="Code de la ville :" Margin="10,240,0,0" HorizontalAlignment="Left" Width="100" Height="29" VerticalAlignment="Top"></Label>
                        <ComboBox Name="cbCodeVille" ItemsSource="{Binding}" Height="20" Background="White" Margin="110,251,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Label Content="{Binding codeVille}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Label Content="Commentaire :" Margin="10,270,0,0" HorizontalAlignment="Left" Width="90" Height="29" VerticalAlignment="Top"></Label>
                        <TextBox Name="txtCommCli" TextWrapping="Wrap" AcceptsReturn="False" Margin="100,274,0,0" Height="88" VerticalAlignment="Top" HorizontalAlignment="Left" Width="206"/>
                    </Grid>
                </GroupBox>
                <Button Name="btnAccueil" Height="25" Content="Accueil" Margin="335,541,0,7" HorizontalAlignment="Left" Width="78"></Button>
                <Button Name="btnAjouterCli" Content="Ajouter le client" Height="25" Margin="228,541,0,7" HorizontalAlignment="Left" Width="102"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

<Window x:Class="iAjouterItem" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" Name="windowAjoutItem" WindowStyle="None" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="1146.589" Width="1078.609">
    <Grid>
        <Viewbox Stretch="Uniform" Loaded="Viewbox_Loaded">
            <Grid Height="331" Width="312">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="22*"/>
                    <ColumnDefinition Width="21*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Menu" BorderBrush="Black" Margin="0,0,10,221" Grid.ColumnSpan="2">
                    <Grid>
                        <Button Name="btnCommande" Content="Faire une commande" Height="25" Margin="148,10,2.6,53"/>
                        <Button Name="btnInventaire" Content="Inventaire" Height="25" Margin="4,10,146.6,53"/>
                    </Grid>
                </GroupBox>
                <Label Content="* = non-obligatoire" Margin="40,120,0,174" Grid.Column="1"></Label>
                <Label Content="Code de l'item : " HorizontalAlignment="Left" Margin="6,116,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtRCodeItem" Height="20" VerticalAlignment="Top" Width="99" HorizontalAlignment="Left" Margin="96,120,0,0" Grid.ColumnSpan="2"/>
                <GroupBox BorderBrush="Black" Header="Item" Margin="0,138,88,0" Grid.ColumnSpan="2" Height="153" VerticalAlignment="Top">
                    <StackPanel>
                        <Grid Height="140" Margin="0,0,0.2,0">
                            <Label Content="Nom :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-4,-7,0,0"/>
                            <TextBox x:Name="txtNomItem" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" Margin="71,-2,0,0"/>
                            <Label Content="Description* :" HorizontalAlignment="Left" Margin="-4,23,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtDescItem" Height="60" VerticalAlignment="Top" Width="134" HorizontalAlignment="Left" Canvas.Left="85" Margin="78,23,-1.2,0"/>
                            <Label x:Name="lblFourni" Content="Fournisseur :" Margin="-4,83,4,32"/>
                            <ComboBox x:Name="cbFournisseur" Margin="80,88,0,0" Background="White" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="122">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblFourni" Content="{Binding nomFournisseur}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Grid.Column="1" HorizontalAlignment="Left" Margin="71,300,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Name="btnAjouterItem" Content="Ajouter" Grid.Column="1" HorizontalAlignment="Left" Margin="71,248,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Name="btnAjoutFour" Content="Ajouter Fournisseur" Margin="74,265,94,46" Height="20" Grid.ColumnSpan="2"/>
                <Button Name="btnModifierItem" Content="Modifier" Height="20" Margin="71,275,6,36" Grid.Column="1"/>
            </Grid>
        </Viewbox>

    </Grid>
</Window>

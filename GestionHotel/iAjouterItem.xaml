<Window x:Class="iAjouterItem" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" Name="windowAjoutItem" WindowStyle="None" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="637.789" Width="1078.609">
    <Grid>
        <Viewbox Stretch="Uniform" Loaded="Viewbox_Loaded">
            <Grid Height="182" Width="312">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="22*"/>
                    <ColumnDefinition Width="21*"/>
                </Grid.ColumnDefinitions>
                <Label Content="* = non-obligatoire" Margin="34,2,6,149" Grid.Column="1"></Label>
                <Label Content="Code de l'item : " HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtRCodeItem" Height="20" VerticalAlignment="Top" Width="99" HorizontalAlignment="Left" Margin="90,6,0,0" Grid.ColumnSpan="2"/>
                <GroupBox BorderBrush="Black" Header="Item" Margin="5,31,83,0" Grid.ColumnSpan="2">
                    <StackPanel>
                        <Grid Height="140" Margin="0,0,0.4,0">
                            <Label Content="Nom :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-4,-7,0,0"/>
                            <TextBox x:Name="txtNomItem" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" Margin="71,-2,0,0"/>
                            <Label Content="Description* :" HorizontalAlignment="Left" Margin="-4,23,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtDescItem" Height="60" VerticalAlignment="Top" Width="134" HorizontalAlignment="Left" Canvas.Left="85" Margin="78,23,-1.2,0"/>
                            <Label Name="lblFourni" Content="Fournisseur :" Margin="-4,83,4,32"/>
                            <ComboBox x:Name="cbFournisseur" Margin="80,88,0,0" Background="White" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="122">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblFourni" Content="{Binding nomFournisseur}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Grid.Column="1" HorizontalAlignment="Left" Margin="74,141,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Name="btnAjouterItem" Content="Ajouter" Grid.Column="1" HorizontalAlignment="Left" Margin="74,76,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Name="btnAjoutFour" Content="Ajouter Fournisseur" Margin="81,156,87,6" Height="20" Grid.ColumnSpan="2"/>
                <Button Name="btnModifierItem" Content="Modifier" Height="20" Margin="74,98,3,64" Grid.Column="1"/>
            </Grid>
        </Viewbox>

    </Grid>
</Window>

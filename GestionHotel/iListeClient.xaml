<Window x:Class="iListeClient" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iListeClient" Height="250.933" Width="300">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="453" Width="547">
                <Label Content="Rechercher :" Margin="10,0,-10,0"></Label>
                <TextBox Name="txtRCli" Height="20" Margin="91,5,336,428" Width="120"></TextBox>
                <GroupBox Header="Liste de clients" BorderBrush="Black" Margin="10,25,10,40">
                    <DataGrid Name="dgClient" Margin="0,0,-2.6,-4.4" Height="370" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nom" Binding="{Binding nomCli}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Prénom" Binding="{Binding prenomCli}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Name="btnAjouterClient" Content="Ajouter un client" Margin="258,418,188,10" Height="25"/>
                <Button Name="btnModifierClient" Content="Modifier un client" Margin="364,418,74,10" Height="25"/>
                <Button Name="btnAccueil" Content="Accueil" Margin="478,418,12,10" Height="25"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

<Window x:Class="iListeClient" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iListeClient" Height="324.533" Width="300" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="584" Width="547">
                <Label Content="Rechercher :" Margin="10,0,-10,0"></Label>
                <TextBox Name="txtRCli" Height="20" Margin="87,5,340,667" Width="120"></TextBox>
                <GroupBox Header="Menu" BorderBrush="Black" Margin="0,25,10,421">
                    <Grid>
                        <Button Name="btnCheck" Content="Check-in/Check-out" Height="25" Width="125" Margin="10,10,269.8,72.2"></Button>
                        <Button Name="btnFact" Content="Facture" Height="25" Width="125" Margin="10,40,269.8,42.2"></Button>
                        <Button Name="btnReservC" Content="Réservation Chambre" Height="25" Width="125" Margin="10,70,269.8,10.2"/>
                        <Button Name="btnFicheC" Content="Fiche client" Height="25" Width="125" Margin="140,10,139.8,72.2"></Button>
                        <Button Name="btnFicheReserv" Content="Fiche Réservation" Height="25" Width="125"></Button>
                        <Button Name="btnFicheReservF" Content="Fiche Réservation Fact" Height="25" Width="125" Margin="140,71,139.8,11.2"></Button>
                        <Button Name="btnAjoutCli" Content="Ajouter Client" Height="25" Width="125" Margin="270,10,9.8,72.2"></Button>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Liste de clients" BorderBrush="Black" Margin="10,163,10,54">
                    <DataGrid Name="dgClient" AutoGenerateColumns="False"  Margin="0,10,-2.6,0" Height="333" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nom" Binding="{Binding nomClient}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Prénom" Binding="{Binding prenClient}"></DataGridTextColumn>
                            <DataGridTextColumn Header="No Tel" Binding="{Binding noTelClient}"></DataGridTextColumn>
                            <DataGridTextColumn Header="No Cell" Binding="{Binding noCellClient}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Adresse" Binding="{Binding adrClient}"></DataGridTextColumn>
                            <DataGridTextColumn Header="No Carte Crédit" Binding="{Binding noCarteCredit}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Type" Binding="{Binding typeCarteCredit}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Date Expiration" Binding="{Binding dateExpiration}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Name="btnAjouterClient" Content="Ajouter un client" Margin="251,549,195,10" Height="25" RenderTransformOrigin="0.5,0.504"/>
                <Button Name="btnModifierClient" Content="Modifier un client" Margin="357,550,81,9" Height="25"/>
                <Button Name="btnAccueil" Content="Accueil" Margin="471,550,19,9" Height="25"/>
                <Button Name="btnReserv" Content="Faire une réservation" Margin="120,549,301,10" Height="25"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

<Window x:Class="iFicheReservFacture" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" Background="CadetBlue" Name="window_FicheReservFacture" Icon="icon.ico"

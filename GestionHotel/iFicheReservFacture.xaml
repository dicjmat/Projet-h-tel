                                <DataGridTextColumn Header="Description"></DataGridTextColumn>
                                <DataGridTextColumn Header="Prix"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Style="{StaticResource styleBouton}" Name="btnConsulter" Content="Consulter" Height="25" Margin="219,271,10.2,0.8"></Button>
                    </Grid>
                </GroupBox>
                <DataGrid Name="dgReserv" AutoGenerateColumns="False" Margin="379,458,10,90">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="No de chambre"></DataGridTextColumn>
                        <DataGridTextColumn Header="Nom"></DataGridTextColumn>
                        <DataGridTextColumn Header="No de réservation"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Style="{StaticResource styleBouton}" Name="btnAccueil" Content="Accueil" Height="25" Margin="605,636,10,33"></Button>
            </Grid>

<Window x:Class="iCheckList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iCheckList" Height="500" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Viewbox>
            <Grid Height="578">
                <Label Content="Numéro de la chambre" FontSize="15" Margin="50,10,89,538" />
                <ComboBox ItemsSource="{Binding}" Name="cbTest" Height="30" Width="300" Margin="211,10,89,538">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Label Content="{Binding nom}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ListBox ItemsSource="{Binding}" Name="lbTest" Width="500" Margin="50,45,50,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <CheckBox Content="{Binding tblItem.NomItem}"/>
                                <TextBox x:Name="txtComCheck" Width="300" Height="70" VerticalAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

<Window x:Class="iListeCOmmande" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" Background="CadetBlue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iListeCOmmande" Height="247.2" Width="300" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="453" Width="547">
                <Label Content="Rechercher :"/>
                <TextBox Name="txtRComm" Height="20" Margin="81,5,346,428" Width="120"></TextBox>
                <GroupBox Header="Liste de commande" Margin="0,25,0,33">
                    <DataGrid Name="dgCommande">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="No" Binding="{Binding noCommande}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Date" Binding="{Binding dateCommande}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Prix Total ($)" Binding="{Binding prixCommande}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Etat de la commande" Binding="{Binding etatCommande}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Height="25" Margin="460,425,10,0" VerticalAlignment="Top"></Button>
                <Button Name="btnSupprimerComm" Content="Supprimer une commande" Height="25" Margin="287,425,92,3"></Button>
                <Button Name="btnAjouterComm" Content="Ajouter une commande" Height="25" Margin="113,425,265,3"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

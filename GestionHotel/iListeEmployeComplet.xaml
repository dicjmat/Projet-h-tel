<Window x:Class="iListeEmployeComplet" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" Background="CadetBlue" Name="window_lstEmployeComplet" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iListeEmployeComplet" Height="300" Width="480.8">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="370" Width="605">
                <Label Content="Rechercher :" Margin="0,5,520,321"></Label>
                <TextBox Name="txtRecherche" Height="25" Margin="85,5,358,340"/>
                <Label Content="Hôtel :" Margin="317,0,224,336"></Label>
                <ComboBox Name="cbHotel" Height="25" Margin="365,0,76,345" ItemsSource="{Binding}" Background="White" SelectedIndex="0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Label x:Name="lblVille" Content="{Binding nomHotel}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <GroupBox Header="Liste d'employé" BorderBrush="Black" Margin="0,30,0,34">
                    <DataGrid Name="dgEmploye" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="no Employé" Binding="{Binding noEmpl}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Nom" Binding="{Binding nomEmpl}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Prénom" Binding="{Binding prenEmpl}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Code de Profession" Binding="{Binding codeProf}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Height="25" Margin="491,341,10,4"></Button>
                <Button Name="btnModif" Content="Modifier un employé" Height="25" Margin="327,341,119,4"></Button>
                <Button Name="btnAjout" Content="Ajouter un employé" Height="25" Margin="163,341,283,4"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

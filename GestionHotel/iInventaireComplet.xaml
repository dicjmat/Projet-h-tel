<Window x:Class="iInventaireComplet" Name="window_invComp" WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize" Background="CadetBlue" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iInventaireComplet" Height="311.2" Width="570.4">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="486" Height="264">
                <Label Content="Rechercher :" Margin="0,5,186,224"></Label>
                <TextBox Name="txtRecherche" Height="25" Margin="73,5,278,234"></TextBox>
                <Label Content="Hôtel :" Margin="221,5,161,234"></Label>
                <ComboBox Name="cbHotel" Background="White" Margin="269,5,59,234" ItemsSource="{Binding}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Label x:Name="lblHotel" Content="{Binding nomHotel}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <GroupBox Header="Inventaire" BorderBrush="Black" Margin="0,30,10,30">
                    <DataGrid Name="dgInventaireC" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding codeItem}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Nom" Binding="{Binding nomItem}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Stock" Binding="{Binding stock}" Foreground="Transparent">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding stock}" Value="True">
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Description" Binding="{Binding descItem}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Height="25" Margin="385,239,10,0"></Button>
                <Button Name="btnSupprimer" Content="Supprimer un item" Height="25" Margin="257,239,106,0"></Button>
                <Button Name="btnModifier" Content="Modifier un item" Height="25" Margin="129,239,234,0"></Button>
                <Button Name="btnAjouter" Content="Ajouter un item" Height="25" Margin="1,239,362,0"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

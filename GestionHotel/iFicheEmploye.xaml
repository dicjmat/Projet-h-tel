<Window x:Name="windowFicheEmploye" x:Class="iFicheEmploye" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Gestion Hotel" Height="430" Width="744.6" Closing="Window_Closing">
    <Grid Margin="0,0,14.8,0.4">
        <Viewbox Stretch="Uniform">
            <Grid Height="422" Width="679">
                <GroupBox Header="Menu" BorderBrush="Black" Margin="0,0,-17,278">
                    <Grid>
                        <Button Name="btnAjouterItem" Content="Ajouter un item" Height="25" Margin="10,51,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                        <Button Name="btnAjoutFourni" Content="Ajouter un fournisseur" Height="25" Margin="10,10,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                        <Button Name="btnCommande" Content="Faire une commande" Height="25" Margin="10,87,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                        <Button Name="btnFicheEmp" Content="Ficeh d'employé" Height="25" Margin="177,10,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnGSalle" Content="Gestion salle" Height="25" Margin="177,51,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnGChambre" Content="Gestion chambre" Height="25" Margin="177,87,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnGHotel" Content="Gestion hotel" Height="25" Margin="344,10,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnIComplet" Content="Inventaire complet" Height="25" Margin="344,51,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnLCentrale" Content="Liste centrale" Height="25" Margin="344,87,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnLEmpCentrale" Content="Liste d'employé centrale" Height="25" Margin="511,10,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnLHotel" Content="Liste d'hotel" Height="25" Margin="511,51,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnLSalle" Content="Liste de salle" Height="25" Margin="511,87,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnAhoutHoraireGest" Content="Ajouter un horaire" Height="25" Margin="10,87,0,0" HorizontalAlignment="Left" Width="160" VerticalAlignment="Top"/>
                        <Button Name="btnListeCommandeGest" Content="Liste de commande" Height="25" Margin="10,51,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                        <Button Name="btnListeEmpGest" Content="Liste d'employé" Height="25" Margin="10,10,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                    </Grid>
                </GroupBox>
                <Label Content="* = non-obligatoire" Margin="292,146,264,248"></Label>
                <Button Name="btnAjoutHoraire" Content="Ajouter Horaire" HorizontalAlignment="Center" Margin="420,179,159,0" VerticalAlignment="Top" Width="100" Height="30"/>
                <Label Content="No de l'employé : " HorizontalAlignment="Left" Margin="2,150,0,0" VerticalAlignment="Top"/>
                <TextBox Name="txtNoEmpl" Text="{Binding noEmpl}" Height="25" VerticalAlignment="Top" Width="120" HorizontalAlignment="Left" Margin="106,149,0,0" IsEnabled="False"/>
                <GroupBox BorderBrush="Black" Header="Fiche Employé" Margin="0,179,0,10" HorizontalAlignment="Left" Width="415">
                    <StackPanel>
                        <Grid>
                            <Label Content="Nom : " Margin="0,0,0,0"></Label>
                            <xctk:MaskedTextBox  Name="txtNomEmp" Text="{Binding nomEmpl}" Margin="110,5,0,0" Height="23" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="Prénom : " Margin="0,25,0,0"></Label>
                            <xctk:MaskedTextBox Name="txtPrenomEmp" Text="{Binding prenEmpl}" Margin="110,30,0,0" Height="23" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="noTéléphone : " Margin="0,50,0,0"></Label>
                            <xctk:MaskedTextBox  PromptChar=" " Mask="000-000-0000" Name="txtTellEmp" Text="{Binding noTelEmpl}" Margin="110,55,0,0" Height="20" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="noCéllulaire* : " Margin="0,75,0,0"></Label>
                            <xctk:MaskedTextBox  PromptChar=" " Mask="000-000-0000" Name="txtCellEmp" Text="{Binding noCellEmpl}" Margin="110,80,0,0" Height="20" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="Adresse : " Margin="0,100,0,0"></Label>
                            <xctk:MaskedTextBox Name="txtAdrEmp" Text="{Binding adrEmpl}" Margin="110,105,0,0" Height="20" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="NAS : " Margin="0,125,0,0"></Label>
                            <xctk:MaskedTextBox PromptChar=" " Mask="000000000"  Name="txtNASEmp" Text="{Binding NAS}" Margin="110,130,0,0" Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="Date d'embauche : " Margin="0,150,0,0"></Label>
                            <DatePicker Name="DPEmbaucheEmp" Text="{Binding dateEmbauche}" HorizontalAlignment="Left" Margin="110,155,0,0" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Heures travaillées* : " Margin="209,101,84.2,79.4"></Label>
                            <TextBox Name="txtHrsEmp" Text="{Binding hrTravail}" Margin="316,106,0,0" Height="20" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Salaire ($/h) : " Margin="209,78,114.2,106.4"></Label>
                            <TextBox Name="txtSalaireEmp" Text="{Binding salaire}" Margin="291,83,0,0" Height="20" Width="75" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Vacances : " Margin="228,152,63.2,34"></Label>
                            <TextBox Name="txtVacEmp" Text="{Binding joursVac}" Margin="324,182,0,0" Height="20" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Fériés : " Margin="228,177,91.2,-23.8"></Label>
                            <TextBox Name="txtFerieEmp" Text="{Binding joursFerie}" Margin="324,155,0,0" Height="20" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Maladies : " Margin="210,125,92.2,55.4"></Label>
                            <TextBox Name="txtMaladieEmp" Text="{Binding joursMal}" Margin="324,129,0,0" Height="20" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="CodeVille :" Margin="209,0,21.2,182.8"></Label>
                            <Label Content="CodeProf :" Margin="209,53,126.2,131.6"></Label>
                            <Label Content="No d'hôtel :" Margin="209,27,21.2,156.4"></Label>
                            <ComboBox Name="cmbCdVille" ItemsSource="{Binding}" Margin="282,0,0.2,179.8" Height="25" Background="White" FontSize="10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblVille" Content="{Binding nomVille}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <ComboBox Name="cmbNoHot" ItemsSource="{Binding}" Margin="282,27,0.2,152.8" Height="25" Background="White" FontSize="10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblHotel" Content="{Binding nomHotel}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <ComboBox Name="cmbCdProf" ItemsSource="{Binding}" Height="25" Margin="282,54,0.2,125.8" Background="White" FontSize="10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblProf" Content="{Binding nomProf}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnCreer" Content="Créer" HorizontalAlignment="Left" Margin="420,312,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnCreer_Click"/>
                <Button Name="btnAccueil" Content="Accueil" HorizontalAlignment="Left" Margin="420,382,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
                <Button Name="btnAnnuler" Content="Annuler" HorizontalAlignment="Left" Margin="420,347,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnAnnuler_Click"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

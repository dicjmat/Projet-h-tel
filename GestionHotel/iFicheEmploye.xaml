<Window x:Class="iFicheEmploye" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="286.8" Width="535" Closing="Window_Closing">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="250" Width="530">
                <Label Content="NoEmploye : " HorizontalAlignment="Left" Margin="4,5,0,0" VerticalAlignment="Top"/>
                <TextBox Name="txtRNoClient" Height="25" VerticalAlignment="Top" Width="120" HorizontalAlignment="Left" Margin="100,5,0,0"/>
                <GroupBox BorderBrush="Black" Header="Fiche Employe" Margin="0,30,0,0" HorizontalAlignment="Left" Width="400">
                    <StackPanel>
                        <Grid>
                            <Label Content="NomEmploye : " Margin="0,0,0,0"></Label>
                            <TextBox Name="txtNomEmp" Margin="110,5,0,0" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="PrenomEmploye : " Margin="0,25,0,0"></Label>
                            <TextBox Name="txtPrenomEmp" Margin="110,30,0,0" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="noTellEmploye : " Margin="0,50,0,0"></Label>
                            <TextBox Name="txtTellEmp" Margin="110,55,0,0" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="noCellEmploye : " Margin="0,75,0,0"></Label>
                            <TextBox Name="txtCellEmp" Margin="110,80,0,0" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="AdresseEmploye : " Margin="0,100,0,0"></Label>
                            <TextBox Name="txtAdrEmp" Margin="110,105,0,0" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="NAS : " Margin="0,125,0,0"></Label>
                            <TextBox Name="txtNASEmp" Margin="110,130,0,0" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="DateEmbauche : " Margin="0,150,0,0"></Label>
                            <DatePicker Name="DPEmbaucheEmp" HorizontalAlignment="Left" Margin="110,155,0,0" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Heures travaillées : " Margin="230,0,0,0"></Label>
                            <TextBox Name="txtHrsEmp" Margin="335,5,0,0" Height="20" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Salaire ($/h) : " Margin="230,25,0,0"></Label>
                            <TextBox Name="txtSalaireEmp" Margin="310,30,0,0" Height="20" Width="75" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Vacances : " Margin="230,50,0,0"></Label>
                            <TextBox Name="txtVacEmp" Margin="325,55,0,0" Height="20" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Fériés : " Margin="230,75,0,0"></Label>
                            <TextBox Name="txtFerieEmp" Margin="310,80,0,0" Height="20" Width="75" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Maladies : " Margin="230,100,0.2,54.2"></Label>
                            <TextBox Name="txtMaladieEmp" Margin="325,105,0,0" Height="20" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="CodeVille :" Margin="235,125,84.2,30"></Label>
                            <Label Content="CodeProf :" Margin="235,175,84.2,-21.2"></Label>
                            <Label Content="NoHotel :" Margin="235,150,84.2,1.8"></Label>
                            <TextBox Name="txtCdVille" Margin="310,130,0.2,54.8" Height="20"></TextBox>
                            <TextBox Name="txtCdProf" Margin="310,155,0.2,30" Height="20"></TextBox>
                            <TextBox Name="txtNoHot" Height="20" Margin="311,180,-0.8,4.8"></TextBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Content="Créer" HorizontalAlignment="Left" Margin="420,44,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Button_Click"/>
                <Button Content="Sauvegarder" HorizontalAlignment="Left" Margin="420,94,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
                <Button Name="btnAccueil" Content="Accueil" HorizontalAlignment="Left" Margin="420,194,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
                <Button Content="Annuler" HorizontalAlignment="Left" Margin="420,144,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

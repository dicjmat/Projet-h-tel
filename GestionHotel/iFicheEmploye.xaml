<Window x:Name="windowFicheEmploye" x:Class="iFicheEmploye" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Gestion Hotel" Height="286.8" Width="535" Closing="Window_Closing">
    <Grid Margin="0,0,14.8,0.4">
        <Viewbox Stretch="Uniform">
            <Grid Height="250" Width="530">
                <Button Name="btnAjoutHoraire" Content="Ajouter Horaire" HorizontalAlignment="Center" Margin="420,0,10,0" VerticalAlignment="Top" Width="100" Height="30"/>
                <Label Content="No de l'employé : " HorizontalAlignment="Left" Margin="4,5,0,0" VerticalAlignment="Top"/>
                <TextBox Name="txtNoEmpl" Text="{Binding noEmpl}" Height="25" VerticalAlignment="Top" Width="120" HorizontalAlignment="Left" Margin="108,5,0,0" IsEnabled="False"/>
                <GroupBox BorderBrush="Black" Header="Fiche Employé" Margin="0,30,0,-13" HorizontalAlignment="Left" Width="415">
                    <StackPanel>
                        <Grid>
                            <Label Content="Nom : " Margin="0,0,0,0"></Label>
                            <xctk:MaskedTextBox  Name="txtNomEmp" Text="{Binding nomEmpl}" Margin="110,5,0,0" Height="23" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="Prénom : " Margin="0,25,0,0"></Label>
                            <xctk:MaskedTextBox Name="txtPrenomEmp" Text="{Binding prenEmpl}" Margin="110,30,0,0" Height="23" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="noTéléphone : " Margin="0,50,0,0"></Label>
                            <xctk:MaskedTextBox  PromptChar=" " Mask="000-000-0000" Name="txtTellEmp" Text="{Binding noTelEmpl}" Margin="110,55,0,0" Height="20" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="noCéllulaire : " Margin="0,75,0,0"></Label>
                            <xctk:MaskedTextBox  PromptChar=" " Mask="000-000-0000" Name="txtCellEmp" Text="{Binding noCellEmpl}" Margin="110,80,0,0" Height="20" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="Adresse : " Margin="0,100,0,0"></Label>
                            <xctk:MaskedTextBox Name="txtAdrEmp" Text="{Binding adrEmpl}" Margin="110,105,0,0" Height="20" Width="99" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="NAS : " Margin="0,125,0,0"></Label>
                            <xctk:MaskedTextBox Mask="000000000"  Name="txtNASEmp" Text="{Binding NAS}" Margin="110,130,0,0" Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top"></xctk:MaskedTextBox>
                            <Label Content="Date d'embauche : " Margin="0,150,0,0"></Label>
                            <DatePicker Name="DPEmbaucheEmp" Text="{Binding dateEmbauche}" HorizontalAlignment="Left" Margin="110,155,0,0" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Heures travaillées : " Margin="209,101,84.2,79.4"></Label>
                            <TextBox Name="txtHrsEmp" Text="{Binding hrTravail}" Margin="316,106,0,0" Height="20" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Salaire ($/h) : " Margin="209,78,114.2,106.4"></Label>
                            <TextBox Name="txtSalaireEmp" Text="{Binding salaire}" Margin="291,83,0,0" Height="20" Width="75" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Vacances : " Margin="228,152,63.2,34"></Label>
                            <TextBox Name="txtVacEmp" Text="{Binding joursVac}" Margin="324,182,0,0" Height="20" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Fériés : " Margin="228,177,91.2,-23.8"></Label>
                            <TextBox Name="txtFerieEmp" Text="{Binding joursFerie}" Margin="324,155,0,0" Height="20" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="Jours Maladies : " Margin="210,125,92.2,55.4"></Label>
                            <TextBox Name="txtMaladieEmp" Text="{Binding joursMal}" Margin="324,129,0,0" Height="20" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
                            <Label Content="CodeVille :" Margin="209,0,21.2,182.8"></Label>
                            <Label Content="CodeProf :" Margin="209,53,126.2,131.6"></Label>
                            <Label Content="No d'hôtel :" Margin="209,27,21.2,156.4"></Label>
                            <ComboBox Name="cmbCdVille" ItemsSource="{Binding}" Margin="282,0,0.2,179.8" Height="25" Background="White" FontSize="10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblVille" Content="{Binding nomVille}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <ComboBox Name="cmbNoHot" ItemsSource="{Binding}" Margin="282,27,0.2,152.8" Height="25" Background="White" FontSize="10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblHotel" Content="{Binding nomHotel}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <ComboBox Name="cmbCdProf" ItemsSource="{Binding}" Height="25" Margin="282,54,0.2,125.8" Background="White" FontSize="10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label x:Name="lblProf" Content="{Binding nomProf}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnCreer" Content="Créer" HorizontalAlignment="Left" Margin="420,44,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnCreer_Click"/>
                <Button Name="btnSauvegarder" Content="Sauvegarder" HorizontalAlignment="Left" Margin="420,94,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
                <Button Name="btnAccueil" Content="Accueil" HorizontalAlignment="Left" Margin="420,194,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
                <Button Name="btnAnnuler" Content="Annuler" HorizontalAlignment="Left" Margin="420,144,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnAnnuler_Click"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

                    </Grid>
                </GroupBox>
                <GroupBox Header="Pays" BorderBrush="Black" Margin="259,21,0,38" HorizontalAlignment="Left" Width="122">
                    <Grid>
                        <DataGrid Name="dgPays" Margin="0,0,-0.2,23.4"></DataGrid>
                        <Button Name="btnAjouterPays" Content="Ajouter le pays" Height="20" Margin="0,253,-0.2,-1.8"></Button>
                    </Grid>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Height="20" Margin="294,320,7,13"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

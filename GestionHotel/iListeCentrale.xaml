<Window x:Class="iListeCentrale" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Maximized" Background="CadetBlue" Name="window_lstCentrale" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iListeCentrale" Height="448" Width="589.8">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="464" Height="353">
                <Label Content="Liste Centrale" HorizontalAlignment="Center"></Label>
                <GroupBox Header="Pays" BorderBrush="Black" Margin="5,21,0,38" HorizontalAlignment="Left" Width="143">
                    <Grid>
                        <DataGrid Name="dgPays" Margin="0,0,-0.4,23.4" IsReadOnly="True" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding codePays}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Nom" Binding="{Binding nomPays}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Name="btnAjouterPays" Content="Ajouter le pays" Height="20" Margin="0,253,-2.4,-1.8" HorizontalAlignment="Left" Width="112"></Button>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Province" BorderBrush="Black" Margin="153,21,0,38" HorizontalAlignment="Left" Width="144">
                    <Grid>
                        <DataGrid Name="dgProvince" Margin="0,0,-0.2,23.4" IsReadOnly="True" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding codeProv}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Nom" Binding="{Binding nomProv}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Name="btnAjouterProv" Content="Ajouter la province" Height="20" Margin="0,253,-0.4,-1.8" RenderTransformOrigin="0.502,0.5"></Button>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Ville" BorderBrush="Black" Margin="302,21,0,38" HorizontalAlignment="Left" Width="144">
                    <Grid>
                        <DataGrid Name="dgVille" Margin="0,0,-0.2,23.4" IsReadOnly="True" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding codeVille}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Nom" Binding="{Binding nomVille}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Name="btnAjouterVille" Content="Ajouter la ville" Height="20" Margin="0,253,-0.2,-1.8"></Button>
                    </Grid>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Height="20" Margin="294,320,18,13"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

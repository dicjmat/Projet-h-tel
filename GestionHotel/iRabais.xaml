<Window x:Class="iRabais" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" Name="windowRabais" Background="CadetBlue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="iRabais" Height="300" Width="567.785">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="309" Width="587">
                <Label Content="Gestion des rabais" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
                <GroupBox Header="Rabais" BorderBrush="Black" Margin="0,26,0,40">
                    <Grid Margin="0,0,-2.6,-0.2">
                        <Label Content="Taux du rabais :" Margin="1,0,414,182"></Label>
                        <xctk:IntegerUpDown DefaultValue="1" Name="numTaux" Height="20" Margin="99,0,429,198" RenderTransformOrigin="0.581,0.486" Minimum="1" Maximum="100" VerticalAlignment="Bottom"/>
                        <Label Content="%" Margin="154,0,390.8,182"></Label>
                        <Label Content="Code du type de chambre :" Margin="1,30,345,163"></Label>
                        <ComboBox Name="cbTypeChambre" ItemsSource="{Binding}" Height="25" Margin="154,30,354,166">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Label x:Name="lblTypeChambre" Content="{Binding nomTypeChambre}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Label Content="État du rabais :" Margin="1,63,414,124"></Label>
                        <CheckBox Name="chkActif" Margin="93,69,354,113">Actif</CheckBox>
                        <DataGrid Name="dgRabais" Margin="228,0,0,26" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Numéro" Binding="{Binding noRabais}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Type de chambre" Binding="{Binding nomTypeChambre}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Taux" Binding="{Binding tauxRabais}"></DataGridTextColumn>
                                <DataGridTextColumn Header="État" Binding="{Binding etatRabais}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
                <Button Name="btndeco" Content="Déconnexion" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,10"></Button>
                <Button Name="AjoutRab" Content="Ajouter un rabais" Height="25" Margin="110,239,323,45"></Button>
                <Button Name="ModifcRab" Content="Modifier un rabais" Height="25" Margin="269,239,164,45"></Button>
                <Button Name="SuppRab" Content="Supprimer un rabais" Height="25" Margin="428,239,5,45"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

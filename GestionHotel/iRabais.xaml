<Window x:Class="iRabais" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" Name="windowRabais" Background="CadetBlue" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="iRabais" Height="412" Width="567.785">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="429" Width="587">
                <GroupBox Header="Menu" BorderBrush="Black" Margin="10,26,10,287">
                    <Grid>
                        <Button Name="btnAjoutForfait" Content="Ajouter un forfait" Height="25" Width="125" Margin="156,6,273.4,62.6"></Button>
                        <Button Name="btnReservSalle" Content="Réservation de salle" Height="25" Width="125" Margin="155,36,274.4,32.6"></Button>
                        <Button Name="btnListeSalle" Content="Liste de salle" Height="25" Width="125" Margin="155,66,274.4,2.6"/>
                        <Button Name="btnListeForf" Content="Liste de forfait" Height="25" Width="125" Margin="286,6,143.4,62.6"></Button>
                    </Grid>
                </GroupBox>
                <Label Content="Gestion des rabais" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
                <GroupBox Header="Rabais" BorderBrush="Black" Margin="0,148,0,40">
                    <Grid Margin="0,0,-2.6,-0.2">
                        <Label Content="Taux du rabais :" Margin="1,0,414,182"></Label>
                        <xctk:IntegerUpDown DefaultValue="1" Name="numTaux" Height="20" Margin="99,0,429,198" RenderTransformOrigin="0.581,0.486" Minimum="1" Maximum="100" VerticalAlignment="Bottom"/>
                        <Label Content="%" Margin="154,0,390.8,182"></Label>
                        <Label Content="Code du type de chambre :" Margin="1,30,345,163"></Label>
                        <ComboBox Name="cbTypeChambre" ItemsSource="{Binding}" Height="25" Margin="154,30,354,166">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Label x:Name="lblTypeChambre" Content="{Binding nomTypeChambre}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Label Content="État du rabais :" Margin="1,63,414,124"></Label>
                        <CheckBox Name="chkActif" Margin="93,69,354,113">Actif</CheckBox>
                        <DataGrid Name="dgRabais" Margin="228,0,0,26" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Numéro" Binding="{Binding noRabais}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Type de chambre" Binding="{Binding nomTypeChambre}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Taux" Binding="{Binding tauxRabais}"></DataGridTextColumn>
                                <DataGridTextColumn Header="État" Binding="{Binding etatRabais}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
                <Button Name="btndeco" Content="Annuler" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,10" Width="77"></Button>
                <Button Name="AjoutRab" Content="Ajouter un rabais" Height="25" Margin="110,358,323,46"></Button>
                <Button Name="ModifcRab" Content="Modifier un rabais" Height="25" Margin="269,358,164,46"></Button>
                <Button Name="SuppRab" Content="Supprimer un rabais" Height="25" Margin="428,358,5,46"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

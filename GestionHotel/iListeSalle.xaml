<Window x:Name="windowListeSalle" x:Class="iListeSalle" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="384" Width="300">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="611">
                <GroupBox Header="Menu" BorderBrush="Black" Margin="0,0,-0.2,464">
                    <Grid>
                        <Button Name="btnAjoutForfait" Content="Ajouter un forfait" Height="25" Width="125" Margin="10,10,269.8,72.2"></Button>
                        <Button Name="btnReservSalle" Content="Réservation de salle" Height="25" Width="125" Margin="10,40,269.8,42.2"></Button>
                        <Button Name="btnListeForf" Content="Liste de forfait" Height="25" Width="125" Margin="10,70,269.8,10.2"/>
                        <Button Name="btnRabais" Content="Rabais" Height="25" Width="125" Margin="187,19,187.2,80.8"></Button>
                    </Grid>
                </GroupBox>
                <GroupBox BorderBrush="Black" Header="Salle" Margin="0,152,0.2,45">
                    <StackPanel>
                        <Grid>
                            <DataGrid Name="lstSalle" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="0,0,-0.2,-357" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="No" Binding="{Binding noSalle}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Nom" Binding="{Binding nomSalle}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Nb de place" Binding="{Binding nbPlace}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Disponible" Binding="{Binding disponibiliteSalle}"></DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Margin="0,0,9.8,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="74"></Button>
                <Button Name="btnAjouterSalle" Content="Ajouter une salle" Margin="0,0,88.8,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
                <Button Name="btnModifSalle" Content="Modifier la salle" Height="25" Margin="372,532,10.2,0" VerticalAlignment="Top"></Button>
                <Button Name="btnReservaSalle" Content="Réserver la salle" Height="25" Margin="237,532,153.8,0" VerticalAlignment="Top"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

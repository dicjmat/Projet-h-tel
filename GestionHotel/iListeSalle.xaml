<Window x:Name="windowListeSalle" x:Class="iListeSalle" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="300" Width="300">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="453">
                <GroupBox BorderBrush="Black" Header="Salle" Margin="0,30,0,45">
                    <StackPanel>
                        <Grid>
                            <DataGrid Name="lstSalle" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="0,0,-0.2,-357" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="No" Binding="{Binding noSalle}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Nom" Binding="{Binding nomSalle}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Nb de place" Binding="{Binding nbPlace}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Disponible" Binding="{Binding disponibiliteSalle}"></DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Margin="0,0,9.6,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="44"></Button>
                <Button Name="btnAjouterSalle" Content="Ajouter une salle" Margin="0,0,187.6,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
                <Button Name="btnModifSalle" Content="Modifier la salle" Height="25" Margin="323,418,58.6,0" VerticalAlignment="Top"></Button>
                <Button Name="btnReservSalle" Content="Réserver la salle" Height="25" Margin="80,418,304.6,0" VerticalAlignment="Top"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

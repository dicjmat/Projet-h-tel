<Window x:Class="iListeEmploye" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion Hotel" Height="300" Width="300">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="453">
                <Label Content="NoEmploye : " Margin="4,0,-4.4,417" Height="36" VerticalAlignment="Bottom"></Label>
                <TextBox Name="txtNoEmp" Margin="86,5,299.6,0" Height="20" Width="120" VerticalAlignment="Top"/>
                <GroupBox BorderBrush="Black" Header="Employé" Margin="0,30,0,45">
                    <StackPanel>
                        <Grid>
                            <DataGrid Name="lstEmploye" ItemsSource="{Binding}" Margin="0,0,-0.2,-357">
                                <DataGrid.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label Content="{Binding nom}"/>
                                            <Label Content="{Binding prenom}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGrid.ItemTemplate>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Margin="0,0,9.6,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="44"></Button>
                <Button Name="btnAjouterEmploye" Content="Ajouter un employe" Margin="0,0,58.6,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>


<Window x:Class="iListeHotel" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None" ResizeMode="NoResize" Name="window_lstHotel" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="iListeHotel" Height="200.801" Width="300">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="805" Height="539">
                <GroupBox Header="Liste d'hotel" Margin="0,30,431,30">
                    <DataGrid Name="dgHotel" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Numéro" Binding="{Binding noHotel}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Nom de l'hôtel" Binding="{Binding nomHotel}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ville" Binding="{Binding nomVille}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox Header="Liste de chambre" Margin="379,30,0,30">
                    <DataGrid Name="dgChambre" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Numéro" Binding="{Binding noChambre}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Type de chambre" Binding="{Binding nomTypeChambre}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Height="25" Margin="719,509,10,0" VerticalAlignment="Top"></Button>
                <Button Name="btnAjouterHotel" Content="Ajouter un hotel" Height="25" Margin="231,509,431,5"></Button>
                <Button Name="btnAjouterChambre" Content="Ajouter une chambre" Height="25" Margin="563,509,99,5"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

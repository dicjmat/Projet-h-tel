<Window x:Class="iListeHotel" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="CadetBlue" WindowStyle="None" ResizeMode="NoResize" Name="window_lstHotel" Icon="icon.ico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="iListeHotel" Height="271.201" Width="300">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="805" Height="725">
                <GroupBox Header="Menu" BorderBrush="Black" Margin="0,0,0,587">
                    <Grid>
                        <Button Name="btnAjouterItem" Content="Ajouter un item" Height="25" Margin="57,42,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                        <Button Name="btnAjoutFourni" Content="Ajouter un fournisseur" Height="25" Margin="57,12,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                        <Button Name="btnCommande" Content="Faire une commande" Height="25" Margin="57,72,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"/>
                        <Button Name="btnFicheEmp" Content="Ficeh d'employé" Height="25" Margin="224,12,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnGSalle" Content="Gestion salle" Height="25" Margin="224,42,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnGChambre" Content="Gestion chambre" Height="25" Margin="224,72,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnGHotel" Content="Gestion hotel" Height="25" Margin="391,12,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnIComplet" Content="Inventaire complet" Height="25" Margin="391,42,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnLCentrale" Content="Liste centrale" Height="25" Margin="391,74,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnLEmpCentrale" Content="Liste d'employé centrale" Height="25" Margin="558,12,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnInventaire" Content="Inventaire" Height="25" Margin="558,42,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                        <Button Name="btnLSalle" Content="Liste de salle" Height="25" Margin="558,72,0,0" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top"></Button>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Liste d'hotel" Margin="0,138,431,35">
                    <DataGrid Name="dgHotel" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Numéro" Binding="{Binding noHotel}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Nom de l'hôtel" Binding="{Binding nomHotel}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ville" Binding="{Binding nomVille}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox Header="Liste de chambre" Margin="379,138,0,35">
                    <DataGrid Name="dgChambre" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Numéro" Binding="{Binding noChambre}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Type de chambre" Binding="{Binding nomTypeChambre}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Name="btnAccueil" Content="Accueil" Margin="713,695,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="76"/>
                <Button Name="btnAjouterHotel" Content="Ajouter un hotel" Height="25" Margin="39,695,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="142"></Button>
                <Button Name="btnModifierHotel" Content="Modifier un hotel" Height="25" Margin="197,695,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="141"></Button>
                <Button Name="btnAjouterChambre" Content="Ajouter une chambre" Height="25" Margin="400,695,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="143"></Button>
                <Button Name="btnSupprimerChambre" Content="Supprimer une chambre" Height="25" Margin="555,695,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="143"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

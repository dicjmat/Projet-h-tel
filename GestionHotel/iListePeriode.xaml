<Window x:Class="iListePeriode" WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize" Background="CadetBlue" Icon="icon.ico" Name="window_lstPeriode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iListePeriode" Height="408.2" Width="453.6">
    <Window.Resources>
        <Style x:Key="styleBouton" TargetType="Button">
            <Setter Property="Background" Value="WhiteSmoke"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid>
        <Label Content="Recherche :" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70"/>
        <TextBox Name="txtRecherche" Height="25" Margin="70,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"></TextBox>
        <GroupBox Header="Liste de période" BorderBrush="Black" Margin="0,25,-0.4,36">
            <Grid>
                <DataGrid Name="dgPeriode" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Lawl"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        <Button Name="btnAccueil" Style="{StaticResource styleBouton}" Content="Accueil" Height="25" Margin="324,377,0,0" HorizontalAlignment="Left" Width="120" VerticalAlignment="Top"></Button>
        <Button Name="btnAjout" Style="{StaticResource styleBouton}" Content="Ajouter une période" Height="25" Margin="199,377,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"></Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
